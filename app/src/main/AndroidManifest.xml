<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sd_dtu.synergygoadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity"
            android:theme="@style/AppTheme3"
            />
        <activity
            android:name=".NewAllotAct"
            android:theme="@style/AppTheme3"
            android:parentActivityName=".MenuActivity"
            />
        <activity android:name=".PreviousAllotDetails"
            android:theme="@style/AppTheme3"
            android:parentActivityName=".MenuActivity"
            />
        <activity android:name=".DetailsAct"
            />
        <activity android:name=".EditActivity"
            android:theme="@style/AppTheme3"
            />
        <activity
            android:name=".RegisterNewAgent"
            android:theme="@style/AppTheme3"
            android:parentActivityName=".MenuActivity"
            />
        <activity android:name=".AgentActivity"
            android:parentActivityName=".PreviousAllotDetails"
            android:theme="@style/AppTheme3"
            ></activity>
    </application>

</manifest>